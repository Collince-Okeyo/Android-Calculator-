<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1F1F26"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/btnMathField"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text=""
            android:layout_gravity="left"
            android:textColor="#fff"/>
    <TextView
            android:id="@+id/btnAnswerField"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="35sp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:textColor="#fff"/>


    <GridLayout android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:columnCount="4"
                android:layout_gravity="center"
                android:rowCount="9">


        <Button android:id="@+id/btnClear"
                android:layout_height="45dp"
                android:layout_width="70dp"
                android:text="CLR"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/sidebuttonbox"/>/>
        <Button android:id="@+id/btnTan"
                android:layout_height="45dp"
                android:layout_width="70dp"
                android:text="tan"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/sidebuttonbox"/>/>
        <Button android:id="@+id/btnSin"
                android:layout_height="45dp"
                android:layout_width="70dp"
                android:text="sin"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/sidebuttonbox"/>/>
        <Button android:id="@+id/btnCos"
                android:layout_height="45dp"
                android:layout_width="70dp"
                android:text="cos"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/sidebuttonbox"/>

        <Button android:id="@+id/btnSeven"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="7"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
        android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnEight"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="8"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnNine"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="9"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnDivide"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="/"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/sidebuttonbox"/>/>
        <Button android:id="@+id/btnFour"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="4"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnFive"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="5"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnSix"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="6"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnMultiply"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="X"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/sidebuttonbox"/>/>
        <Button android:id="@+id/btnOne"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="1"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnTwo"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="2"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnThree"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="3"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnMinus"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="-"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/sidebuttonbox"/>/>
        <Button android:id="@+id/btnDot"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="."
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnZero"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="0"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnInvertSign"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="+/-"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnPlus"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="+"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/sidebuttonbox"/>/>

        <Button android:id="@+id/btnDoubleZero"
                android:layout_height="45dp"
                android:layout_width="70dp"
                android:text="00"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnOpeningBracket"
                android:layout_height="45dp"
                android:layout_width="70dp"
                android:text="("
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnClosingBracket"
                android:layout_height="45dp"
                android:layout_width="70dp"
                android:text=")"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/numberbox"/>
        <Button android:id="@+id/btnEquals"
                android:layout_height="45dp"
                android:layout_width="70dp"
                android:text="="
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:background="@drawable/equalsignbox"/>


    </GridLayout>

</LinearLayout>